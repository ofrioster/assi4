<?xml version="1.0" encoding="UTF-8"?>
   <project name="Hello World Project" default="jar">
    <target name="clean" description="remove intermediate files">
        <delete dir="classes"/>
    </target>
    <target name="clobber" depends="clean" description="remove all artifact files">
        <delete file="Driver.jar"/>
    </target>
    <target name="compile" description="compile the Java source code to class files">
        <mkdir dir="classes"/>
        <javac srcdir="./src/run/" destdir="classes"/>
    </target>
    <target name="jar" depends="compile" description="create a Jar file for the application">
        <jar destfile="build/main.jar">
            <fileset dir="classes" includes="**/*.class"/>
         <manifest>
        <attribute name="Main-Class" value="test1.main"/>
        </manifest>
        </jar>
    </target>
    <target name="run" depends="jar" description="run the Jar file for the application">
        <java fork="true" jar="build/Driver.jar" ><arg value="${arg0}"/><arg value="${arg1}"/><arg value="${arg2}"/></java>
    </target>
</project>
